{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "outDir": "out",
        "sourceMap": true,
        "rootDir": ".",
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "importHelpers": false,
        "removeComments": true
    },
    "include": [
        "./src/**/*"
    ]
}